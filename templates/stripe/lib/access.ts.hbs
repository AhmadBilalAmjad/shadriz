import { and, desc, eq } from "drizzle-orm";
import { db } from "./db";
import { order, subscription } from "@/schema/stripe";

export async function hasProduct(userId: string, productId: string) {
  const orderRes = await db.query.order.findFirst({
    where: and(eq(order.user_id, userId), eq(order.product_id, productId)),
  });
  if (!orderRes) {
    return false;
  }
  return true;
}

export async function hasActiveSubscription(userId: string) {
  const subscriptionRes = await db.query.subscription.findFirst({
    where: eq(subscription.user_id, userId),
    orderBy: desc(subscription.created_at),
  });

  if (!subscriptionRes) {
    return false;
  }

  const expireDate = new Date(subscriptionRes.end_date);
  expireDate.setDate(expireDate.getDate() + 2);
  const now = new Date();

  if (now < expireDate) {
    return true;
  }

  return false;
}

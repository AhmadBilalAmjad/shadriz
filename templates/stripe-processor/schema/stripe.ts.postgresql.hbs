import {
  timestamp,
  pgTable,
  text,
  primaryKey,
  integer,
  boolean,
  uuid,
  json,
  pgEnum,
  date,
  unique,
  doublePrecision,
  bigserial,
  bigint,
} from "drizzle-orm/pg-core";
import { user } from "./user";

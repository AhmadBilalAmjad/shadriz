import {{capitalizedTable}}UpdateForm from "@/components/{{table}}/{{table}}-update-form";
import { db } from "@/lib/db";
import { {{table}} } from "@/schema/{{table}}";
import { eq } from "drizzle-orm";
import { notFound } from "next/navigation";

export default async function Page({ params }: { params: { id: string } }) {
  const { id } = params;
  const data = await db.query.{{table}}.findFirst({ where: eq({{table}}.id, id) });

  if (!data) {
    notFound();
  }

  return (
    <div>
      <h1 className="text-3xl font-bold mb-6">Update {{table}}</h1>
      <{{capitalizedTable}}UpdateForm data={data} />
    </div>
  );
}
